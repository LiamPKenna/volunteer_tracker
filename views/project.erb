<h2>Project Title: <%= @project.title %></h2>

<h3>Project Volunteers:</h3>

  <% if @project.volunteers.length > 0 %>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>Volunteer Name</th>
      </tr>
    </thead>
    <tbody>
      <% @project.volunteers.each do |volunteer| %>
      <tr>
        <td><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>There are no volunteers listed for this project yet.</p>
  <% end %>

<h4>Add a volunteer:</h4>

<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group">
    <label for="name">Volunteer name</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add Volunteer</button>
</form>

<form action="/projects/<%= @project.id() %>/edit" method="get">
  <input name="_method" type="hidden" value="edit">
  <button type="submit" class="btn"><a href="/projects/<%= @project.id() %>/edit">Edit Project</a></button>
</form>
